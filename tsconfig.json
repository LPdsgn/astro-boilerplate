{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "bundler",
		"paths": {
			"@root/*": ["./*"],
			"@src/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@images/*": ["./src/assets/images/*"],
			"@pages/*": ["./src/pages/*"],
			"@lib/*": ["./src/lib/*"],
			"@styles/*": ["./src/styles/*"],
			"@templates/*": ["./src/templates/*"],
			"@types/*": ["types/*"],
			"@data/*": ["./src/data/*"]
		}
	},
	"exclude": ["dist", "node_modules"]
}
