{
	"endOfLine": "lf",
	"useTabs": true,
	"tabWidth": 3,
	"singleQuote": true,
	"trailingComma": "es5",
	"semi": true,
	"printWidth": 100,
	"plugins": [
		"prettier-plugin-astro",
		"prettier-plugin-tailwindcss",
		"prettier-plugin-astro-organize-imports"
	],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	],
	"tailwindStylesheet": "./src/styles/tailwind.css",
	"tailwindFunctions": ["clsx", "cn"]
}
