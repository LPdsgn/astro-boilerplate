{
	"name": "@lpdsgn/astro-boilerplate",
	"title": "Astro Project Boilerplate",
	"type": "module",
	"version": "1.0.0",
	"engines": {
		"node": "22.x || 24.x"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/locomotivemtl/astro-boilerplate.git"
	},
	"author": {
		"name": "Locomotive",
		"email": "info@locomotive.ca",
		"homepage": "https://locomotive.ca"
	},
	"scripts": {
		"prepare": "simple-git-hooks",
		"dev": "astro dev --host",
		"start": "astro dev --host",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"astro": "astro",
		"format": "prettier --write .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.5",
		"@astrojs/vercel": "^9.0.3",
		"@locomotivemtl/grid-helper": "^1.0.0",
		"@swup/head-plugin": "^2.3.1",
		"@swup/preload-plugin": "^3.2.11",
		"@swup/scripts-plugin": "^2.1.0",
		"@vercel/analytics": "^1.6.1",
		"@vercel/speed-insights": "^1.3.1",
		"astro": "^5.15.5",
		"astro-capo": "^0.0.1",
		"astro-icon": "^1.1.5",
		"astro-meta-tags": "^0.4.0",
		"astro-seo": "^0.8.4",
		"gsap": "^3.14.2",
		"locomotive-scroll": "^5.0.0-beta.21",
		"nanostores": "^1.0.1",
		"satori-astro": "^0.3.3",
		"satori-html": "^0.3.2",
		"sharp": "^0.34.5",
		"swup": "^4.8.1",
		"tailwindcss": "^4.1.17",
		"ts-debounce": "^4.0.0",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@locomotivemtl/postcss-helpers-functions": "^1.0.4",
		"@locomotivemtl/postcss-tailwind-shortcuts": "^2.0.1",
		"@tailwindcss/postcss": "^4.1.17",
		"autoprefixer": "^10.4.23",
		"cssnano": "^7.1.2",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-astro": "^1.5.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "^7.37.5",
		"lint-staged": "^16.2.6",
		"globals": "^17.0.0",
		"postcss-utopia": "^1.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-astro-organize-imports": "^0.4.11",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"simple-git-hooks": "^2.13.1",
		"typescript-eslint": "^8.51.0"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"pre-push": "pnpm build"
	},
	"lint-staged": {
		"*.{js,mjs,cjs,ts,tsx,jsx,astro}": [
			"eslint --fix"
		],
		"*": [
			"prettier --write --ignore-unknown"
		]
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild",
			"sharp",
			"simple-git-hooks",
			"swup"
		]
	}
}
