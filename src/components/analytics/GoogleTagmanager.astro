---
import { SITE, isDebug } from '@/site.config';
---

{
	SITE.analytics?.gtmId && (
		<script
			is:inline
			define:vars={{ GTM_ID: SITE.analytics.gtmId, isDebug }}
			type="text/plain"
			data-category="analytics"
			data-service="Google Analytics"
		>
			function initGTM() {
				(function (w, d, s, l, i) {
					w[l] = w[l] || [];
					w[l].push({
						'gtm.start': new Date().getTime(),
						event: 'gtm.js',
					});
					var f = d.getElementsByTagName(s)[0],
						j = d.createElement(s),
						dl = l != 'dataLayer' ? '&l=' + l : '';
					j.async = true;
					j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
					f.parentNode.insertBefore(j, f);
				})(window, document, 'script', 'dataLayer', GTM_ID);

				// Send pageview
				window.dataLayer.push({
					event: 'pageview',
					page: {
						path: window.location.pathname,
						title: document.title,
					},
				});

				console.log('GTM initialized with ID:', GTM_ID);
				window.dataLayer = window.dataLayer || [];
				const originalPush = window.dataLayer.push;
				window.dataLayer.push = function (...args) {
					isDebug && console.log('GTM Event:', ...args);
					return originalPush.apply(this, args);
				};
			}

			// Initial page load
			initGTM();

			// Swup page transitions
			document.addEventListener('page:load', initGTM);
		</script>
	)
}
